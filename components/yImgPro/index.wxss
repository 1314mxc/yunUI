@import "icon.wxss";

.item-wrap {
	position: relative;
}
.item-wrap .item {
    position: absolute;
    overflow: hidden;
    z-index: 1;
}
.item-wrap .item-sel {
    position: absolute;
    z-index: 1;
}
.selectphoto {
    /* width: 218rpx;
    height: 218rpx; */
    border: 2rpx dashed #cbd1d7;
}
.item-wrap .item.itemTransition {
    transition: transform 0.3s;
}
.item-wrap .item.zIndex {
    z-index: 2;
}
.item-wrap .item.cur {
    background: #c6c6c6;
    transition: initial;
}

.info {
    position: relative;
    /* width: 232rpx;
    height: 232rpx;
    padding: 0 13rpx 13rpx 0; */
    background: #ffffff;
    box-sizing: border-box;
}
.info > image {
    width: 100%;
    height: 100%;
}

.indicator {
	position: fixed;
	z-index: 99999;
	right: 0rpx;
	top: 50%;
	margin-top: -250rpx;
	padding: 20rpx;
}
.indicator > view {
    width: 36rpx;
    height: 500rpx;
    background: #ffffff;
    border-radius: 30rpx;
    box-shadow: 0 0 10rpx -4rpx rgba(0, 0, 0, 0.5);
    padding-top: 90rpx;
    box-sizing: border-box;
    font-size: 24rpx;
    text-align: center;
    opacity: 0.8;
}

.icon-delete {
    position: absolute;
    top: 0;
    right: 10rpx;
    text-align: center;
    width: 39rpx;
    height: 39rpx;
    background-color: #000;
    opacity: 0.6;
    color: #fff;
    line-height: 36rpx;
    font-size: 22rpx;
    font-weight: bolder;
    padding: 2rpx;
    border-radius: 0 0 0 11rpx;
}

.icon-jiashang {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: #cbd1d7;
    font-size: 60rpx;
}