.y-popup {
    position: fixed;
    z-index : 1011;
    top     : 0;
    right   : 0;
    bottom  : 0;
    left    : 0;
  
    touch-action: none;
}

.y-popup-bg {
    position  : absolute;
    top       : 0;
    left      : 0;
    right     : 0;
    bottom    : 0;
    z-index   : 1012;
    opacity: 1;
    transition: opacity 0.25s ease-in-out;
}

.y-popup-box {
    position  : absolute;
    
    z-index   : 1013;
    box-sizing: border-box;

    margin: 0 auto;
  
    transition: opacity 0.25s ease-in-out, transform 0.25s ease-in-out;
}

.y-popup-box-bottom {
    left      : 0;
    right     : 0;
    bottom    : 0;
}
.y-popup-box-right {
    top      : 0;
    right     : 0;
    bottom    : 0;
}

.is-hidden-bg {
    opacity: 0;
}

.is-hidden-bottom  {
    opacity: 0;
    transform: translate3d(0, 100%, 0);
}
.is-hidden-right  {
    opacity: 0;
    transform: translate3d(100%, 0, 0);
}

.show-popup {
    transform: translate3d(0, 0, 0);
    opacity  : 1;
}

.y-pop-top {
    position: relative;
    width: 100%;
    display: flex;
    align-items: center;
}

.default-popup {
    height: 86rpx;
    padding: 0 24rpx;
    box-sizing: border-box;
}

.y-pop-top view {
    font-size: 36rpx;
}

.y-pop-top .y-title {
    flex: 1;
    text-align: center;
}

.y-pop-top .y-cancel {
    position: absolute;
    top: 50%;
    right: 24rpx;
    transform: translateY(-50%);
    color: #404040;
}

.y-pop-content {
    width: 100%;
    height: 100%;
    overflow: hidden;
    padding-bottom: constant(safe-area-inset-bottom);
    padding-bottom: env(safe-area-inset-bottom);
}